import java.util.ArrayList;
import java.util.Iterator;

public class Waitress {
	ArrayList<Menu> menus;
	private Menu dinerMenu;
	private Menu pancakeHouseMenu;

	public Waitress(Menu dinerMenu, Menu pancakeHouseMenu, ArrayList<Menu> menus) {
		this.menus = menus;
		this.dinerMenu = dinerMenu;
		this.pancakeHouseMenu = pancakeHouseMenu;
	}

	public void printMenu() {

		Iterator<Menu> menuIterator = menus.iterator();
		while (menuIterator.hasNext()) {
			printMenu(menuIterator.next().createIterator());
		}
	}

	private void printMenu(Iterator<MenuItem> iterator) {
		while (iterator.hasNext()) {
			MenuItem item = iterator.next();
			System.out.print(item.getNombre() + " , ");
			System.out.print(item.getDescripcion() + " - ");
			System.out.println(item.getPrecio());
		}
	}
}
