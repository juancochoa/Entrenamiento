package com.servlet.propio;

import javax.ws.rs.client.Client;
import javax.ws.rs.client.ClientBuilder;
import javax.ws.rs.client.WebTarget;
import javax.ws.rs.core.MediaType;

import org.glassfish.jersey.client.ClientConfig;

import com.sun.mail.iap.Response;

public class JerseyClient {
	private static final String URI = "http://localhost:8080/servlet-platzi/rest";

	public static void main(String[] args) {
		ClientConfig config = new ClientConfig();
		Client client=ClientBuilder.newClient(config);
		WebTarget target=client.target(URI);
		Mensaje msj= target.path("/jersey/vamos/4").request(MediaType.APPLICATION_JSON_TYPE).accept(MediaType.APPLICATION_JSON).get(Mensaje.class);
		
		System.out.println(msj.getDescripcion());
	}
}
