package com.servlet.propio;

import javax.ws.rs.*;
import javax.ws.rs.core.MediaType;
@Path("/jersey")
public class Jersey {

	@Path("/{mensaje}/{tama単o}")
	@GET
	@Produces({MediaType.APPLICATION_JSON + "; charset=UTF-8", MediaType.TEXT_PLAIN})
	public Mensaje jerseyGet(@PathParam("mensaje") String descripcion, @PathParam("tama単o") int tama単o){
		System.out.println("oe");
		System.out.println(descripcion);
		return new Mensaje(descripcion, tama単o);
	}
	
	@POST
	@Produces("text/plain")
	public String jerseyPost(String mensaje){
		return mensaje;
		
	}
	@PUT
	@Produces("text/plain")
	public String jerseyPut(String mensaje){
		return mensaje;
	}
}
